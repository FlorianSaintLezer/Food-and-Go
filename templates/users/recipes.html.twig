{% extends 'base.html.twig' %}

{% block title %}Food and Go - Recipes
{% endblock %}

{% block titre %}Recipes

{% endblock %}


{% block body %}
	<section>
		<div class="tabs">
			<button class="tablink active" onclick="openTab(event, 'filter1')">ALL</button>
			<button class="tablink" onclick="openTab(event, 'filter2')">Starters</button>
			<button class="tablink" onclick="openTab(event, 'filter3')">Dishes</button>
			<button class="tablink" onclick="openTab(event, 'filter4')">Desserts</button>
			<button class="tablink" onclick="openTab(event, 'filter5')">Drinks</button>
		</div>
		<div class="tabcontent" id="filter1" style="display:block;">
			<section class="recipes">
				<div class="cards">
					{% for recipe in recipes %}
						<div class="card" style="background-image: url('{{ asset('img/' ~ recipe.image) }}');">
							<div class="content">
								<h2 class="title">{{recipe.title}}</h2>
								{# <p class="summary">Bref résumé</p> #}
								<button class="cardBtn">View Recipe</button>
							</div>
						</div>
					{% endfor %}
				</div>
			</section>
		</div>
		<div id="filter2" class="tabcontent">
			<h3>Filtre2</h3>
		</div>
		<div id="filter3" class="tabcontent">
			<h3>Filtre3</h3>
		</div>
		<div id="filter4" class="tabcontent">
			<h3>Filtre4</h3>
		</div>
		<div id="filter5" class="tabcontent">
			<h3>Filtre5</h3>
		</div>
	</section>




{% endblock %}
