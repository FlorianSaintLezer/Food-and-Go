{% extends 'base.html.twig' %}

{% block title %}Food and Go - Login
{% endblock %}

{% block body %}
	{% if error %}
		<div id="alert" class="alert-error">Error<buttonid="alert-close">
				<i class="far fa-times-circle"></i>
			</button>
		</div>
	{% endif %}
	<section class="login container">
		<div class="form-login">
			<form method="post" action="{{path('login')}}">
				<h2 class="nice-title">
					<span>Connecte-toi et</span>
					<span>Go</span>
				</h2>
				<div class="form-group">
					<Label>Username</Label>
					<input type="username" require name="_username" class="form-control" placeholder="Username">
				</div>
				<div class="form-group">
					<Label>Password</Label>
					<input type="password" require name="_password" class="form-control" placeholder="Password">
				</div>
				<button class="main-button" type="submit">Connexion</button>
				<p class="under-button">Premi√®re visite ? <a href="{{ path('signin') }}" class="go">Je m'inscris.</a>
				</p>
			</form>
		</div>
	</section>
{% endblock %}
